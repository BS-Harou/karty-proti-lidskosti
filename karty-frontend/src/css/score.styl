one-line()
	overflow: hidden
	text-overflow: ellipsis
	white-space: nowrap

.score
	background: white
	border-top: 1px solid #ccc
	padding: 0
	
.player-row
	display: flex
	flex-flow: row nowrap
	padding: 0.5rem 0.5rem
		
.player-me
	background: #eeeeff
	
.player-name
	one-line()
	flex: 0 0 7rem
	font-weight: bold
	
.player-score
	one-line()
	flex: 0 0 3rem
	
.player-labels
	one-line()
	flex: 1 1 auto
	
	:global(.label)
		margin-right: 0.3rem