one-line()
	white-space: nowrap
	overflow: hidden
	text-overflow: ellipsis

.score
	border-top: 1px solid #ccc
	padding: 0
	background: white
	
.player-row
	display: flex
	flex-flow: row nowrap
	padding: 0.5rem 0.5rem
		
.player-me
	background: #eeeeff
	
.player-name
	one-line()
	flex: 0 0 7rem
	font-weight: bold
	
.player-score
	one-line()
	background: blue
	flex: 1 1 auto
	